    <link rel="stylesheet" href="../css/rps.css" />
    <title>Rock Paper Scissors</title>
  </head>
  <body>
    <header>
      <h1><</h1>
      <img src="../assets/logo.svg" alt="" />
      <h2>Rock Paper Scissors</h2>
    </header>
    <div class="container">
      <div class="heading"><h1>PLAYER</h1></div>
      <div class="player" id="human">
        <div class="hand rock choice" id="p_rock">
          <img src="../assets/batu.png" alt="rock" />
        </div>
        <div class="hand paper choice" id="p_paper">
          <img src="../assets/kertas.png" alt="paper" />
        </div>
        <div class="hand scissors choice" id="p_scissors">
          <img src="../assets/gunting.png" alt="scissors" />
        </div>
      </div>
      <div class="status result">VS</div>
      <div class="comp" id="computer">
        <h1>COMPUTER</h1>
        <div class="hand rock" id="c_rock">
          <img src="../assets/batu.png" alt="rock" />
        </div>
        <div class="hand paper" id="c_paper">
          <img src="../assets/kertas.png" alt="paper" />
        </div>
        <div class="hand scissors" id="c_scissors">
          <img src="../assets/gunting.png" alt="scissors" />
        </div>
      </div>
    </div>
    <div class="reset btn"><img src="../assets/refresh.png" alt="" /></div>
    <script src="../script/rps.js"></script>
  </body>
</html>
